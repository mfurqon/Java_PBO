    private void cKodeActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
        kode_barang=(String) cKode.getSelectedItem();
        if(kode_barang == "D01") {
            nama_barang = "50 Diamond";
            harga = 50000;
        }
        else if(kode_barang == "D02") {
            nama_barang = "150 Diamond";
            harga = 200000;
        }
        else if(kode_barang == "D03") {
            nama_barang = "250 Diamond";
            harga = 350000;
        }
        else if(kode_barang == "D04") {
            nama_barang = "1500 Diamond";
            harga = 1500000;
        }
     tnama.setText(nama_barang);
     tharga.setText(String.valueOf(harga));
     tjumbel.grabFocus();
    }                                     

    private void tjumbelKeyPressed(java.awt.event.KeyEvent evt) {                                   
        // TODO add your handling code here:
        if(evt.getKeyCode()==KeyEvent.VK_ENTER)
        {
            harga = Integer.valueOf(tharga.getText());
            jumlah_beli = Integer.valueOf(tjumbel.getText());
            total = harga * jumlah_beli;
            ttotal.setText(String.valueOf(total));
            tubay.grabFocus();
        }
    }                                  

    private void tubayKeyPressed(java.awt.event.KeyEvent evt) {                                 
        // TODO add your handling code here:
        if(evt.getKeyCode()==KeyEvent.VK_ENTER)
        {
            uang_bayar = Integer.valueOf(tubay.getText());
            total = Integer.valueOf(ttotal.getText());
            uang_kembali = uang_bayar-total;
            if(uang_bayar < total)
            {
                JOptionPane.showMessageDialog(null, "Pembayaran Kurang!!",
                "Warning", JOptionPane.OK_OPTION);
                tukem.setText("");
                tubay.setText("");
            }
            else
            {
            tukem.setText(String.valueOf(uang_kembali));
            }
         }    
    }                                

    private void tukemActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
    }

