//            }
//        }
    }

    private void bdiskonActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
        bhitung.setEnabled(true);
        String merk = cbmerk.getSelectedItem().toString();
        String jenis = "";
//        double diskon = 0.0;
        if(rbbebek.isSelected()){
            jenis = "Bebek";
        }
        else if(rbmatic.isSelected()){
            jenis = "Matic";
        }
        else if(rbsport.isSelected()){
            jenis = "Sport";
        }
        
        
        double harga = motor.getHarga(merk, jenis);
        double diskon = motor.getDiskon(jenis, harga);
        tdiskon.setText(String.format("%,.2f", diskon));
        
//        if(!jenisMotor.isEmpty()){
//            String key = merkMotor + "-" + jenisMotor;
//            double hargaMotor = motor.getHarga(key);
//            diskon = motor.getDiskon(jenisMotor);
//            tdiskon.setText(String.format("%.0f%%", diskon * hargaMotor));
//        }
//        else{
//            tdiskon.setText("");
//        }        
    }

    private void bhitungActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
        String merk = cbmerk.getSelectedItem().toString();
        String jenis = "";
        
        if(rbbebek.isSelected()){
            jenis = "Bebek";
        }
        else if(rbmatic.isSelected()){
            jenis = "Matic";
        }
        else if(rbsport.isSelected()){
            jenis = "Sport";
        }
        
        double harga = motor.getHarga(merk, jenis);
        double diskon = motor.getDiskon(jenis, harga);
        double totalHarga = harga - diskon;
        
        ttotalbayar.setText(String.format("%,.2f", totalHarga));
    }

