    void aktif(){
        tnmpembeli.setEnabled(true);
        cbmerk.setEnabled(true);
    }
    
    void bersih(){
        tnmpembeli.setText("");
        cbmerk.setSelectedItem("PILIH");
        bg.clearSelection();
        rbbebek.setEnabled(false);
        rbmatic.setEnabled(false);
        rbsport.setEnabled(false);
        tharga.setText("");
        cbjenisbayar.setSelectedItem("PILIH");
        cbjenisbayar.setEnabled(false);
        bdiskon.setEnabled(false);
        tdiskon.setText("");
        ttotalbayar.setText("");
        bhitung.setEnabled(false);
    }
    
    void nonaktif(){
        tnmpembeli.setEnabled(false);
        cbmerk.setEnabled(false);
        rbbebek.setEnabled(false);
        rbmatic.setEnabled(false);
        rbsport.setEnabled(false);
        tharga.setEnabled(false);
        cbjenisbayar.setEnabled(false);
        bdiskon.setEnabled(false);
        tdiskon.setEnabled(false);
        ttotalbayar.setEnabled(false);
    }

