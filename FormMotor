    private void thargaActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
    }

    private void rbbebekActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
        if (rbbebek.isSelected()){
            cbjenisbayar.setEnabled(true);        
            double hargaMotor = motor.getHarga(cbmerk.getSelectedItem().toString(), "Bebek");
            tharga.setText(String.format("%,.2f", hargaMotor));
        }
    }

    private void rbmaticActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
        if (rbmatic.isSelected()){
            cbjenisbayar.setEnabled(true);        
            double hargaMotor = motor.getHarga(cbmerk.getSelectedItem().toString(), "Matic");
            tharga.setText(String.format("%,.2f", hargaMotor));
        }
    }

    private void rbsportActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
        if (rbsport.isSelected()){
            cbjenisbayar.setEnabled(true);        
            double hargaMotor = motor.getHarga(cbmerk.getSelectedItem().toString(), "Sport");
            tharga.setText(String.format("%,.2f", hargaMotor));
        }
    }

    private void cbjenisbayarActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
        if (cbjenisbayar.getSelectedItem().equals("Cash")){
            bdiskon.setEnabled(true);
        }
        else if(cbjenisbayar.getSelectedItem().equals("Credit")){
            bdiskon.setEnabled(true);
        }
    }

    private void tdiskonActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
    }

    private void ttotalbayarActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
    }

    private void bselesaiActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
        int x;
        x = JOptionPane.showConfirmDialog(null, "Yakin selesai?", "Exit Confirmation",
                JOptionPane.YES_NO_OPTION);
        if(x == JOptionPane.YES_NO_OPTION)
            dispose();
        else
            return;
    }

    private void bbaruActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
        bersih();
        aktif();
    }

    private void cbmerkActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
        if (cbmerk.getSelectedItem().equals("Honda")){
            rbbebek.setEnabled(true);
            rbmatic.setEnabled(true);
            rbsport.setEnabled(true);
        }
        else if (cbmerk.getSelectedItem().equals("Yamaha")){
            rbbebek.setEnabled(true);
            rbmatic.setEnabled(true);
            rbsport.setEnabled(true);
        }
        else{
            rbbebek.setEnabled(false);
            rbmatic.setEnabled(false);
            rbsport.setEnabled(false);
        }
//        System.out.println("Event listener cbmerkActionPerformed terpanggil");
//        String merk = (String) cbmerk.getSelectedItem();
